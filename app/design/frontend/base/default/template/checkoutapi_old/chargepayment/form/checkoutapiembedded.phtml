?>
<?php $isActive = $this->isActive();?>
<?php if ($isActive):?>
		<ul class="form-list" id="payment_form_<?php echo $this->getMethodCode() ?>" style="display:none;">

        <p><center><img id="cko-loading" src="<?php echo $this->getSkinUrl('images/checkoutApi/load.gif');?>" style="width: 50px;"/></center></p>

            <?php if($this->isCustomerLogged() && $this->isSaveCard() && $this->getPaymentMode() != 'localpayments' ): ?>
                <?php $cardList = $this->getCustomerCardList();?>
                <?php if(!empty($cardList)): ?>
                    <?php foreach($cardList as $index => $card):?>
                        <li>
                            <input class="checkoutapi-saved-card validate-one-required-by-name" type="radio" id="card-<?php echo $index;?>" value="<?php echo $card['value'];?>" name="payment[customer_card]"/>
                            <label for="card-<?php echo $index;?>"><?php echo $card['type'] . ' ' . $card['title'];?></label>
                        </li>
                    <?php endforeach;?>
                    <?php if($this->cvvVerification()):?>
                            <div class="cvvVerification">
                                <label class="required" for="<?php echo $this->getMethodCode() ?>_cc_cid"><em>*</em><?php echo $this->__('Card Verification Number') ?></label>
                                <div class="input-box">
                                    <div class="v-fix">
                                        <input type="text" value="" name="payment[cc_id]" id="<?php echo $this->getMethodCode() ?>_cc_id" class="input-text cvv required-entry validate-cc-cvn" title="Card Verification Number" pattern="\d*" autocomplete="off" value="<?php echo $this->getCcid();?>">
                                    </div>
                                    <a class="cvv-what-is-this" href="#"><?php echo $this->__('What is this?') ?></a>
                                </div>
                            </div>

                    <?php endif;?>
                    <li>
                        <input id="<?php echo $this->getMethodCode()?>-checkoutapi-new-card" class="validate-one-required-by-name" type="radio" name="payment[customer_card]" value="new_card"/>
                        <label for="checkoutapi-new-card">Use New Card</label>
                    </li>
                <?php endif;?>
            <?php endif;?>


			<li>
				<input type="hidden" id="<?php echo $this->getMethodCode()?>-cko-card-token" name="payment[checkout_card_token]" value=""/>

            <div class="frames-container" id="frames-container">
            </div>
                <!-- frames.js -->

                <script type="text/javascript">
                    window.CKOConfig={
                        publicKey: 'pk_test_763e0a06-2eb2-4ac0-8099-65009064bded',
                        containerSelector: 'frames-container',
                        frameActivated: function(){
                            jQuery('#cko-iframe-id').removeClass('cko-iframe');
                            jQuery("#cko-iframe-id").css({"border-left-width":"0px","border-bottom-width":"0px","border-right-width": "0px","border-top-width":"0px"});
                            document.getElementById('cko-loading').hide();
                        },
                        cardTokenised: function(event) {
                            if (document.getElementById('checkoutapiembedded-cko-card-token').value.length === 0 || document.getElementById('checkoutapiembedded-cko-card-token').value != event.data.cardToken) {
                                document.getElementById('checkoutapiembedded-cko-card-token').value = event.data.cardToken;

                                Frames.init(window.checkout);

                                //console.log(event.data.cardToken);
                                window.checkoutApiSubmitOrder();
                            }
                        },
                    };

                    var script = document.createElement('script');
                    script.type = "text/javascript";
                    script.src = 'https://cdn.checkout.com/js/frames.js';
                    script.async = false;
                    document.getElementById('payment_form_checkoutapiembedded').appendChild(script);

                </script>

                <!-- end frames.js -->
            </div>
			</li>
            <li class="checkoutapi-save-card-check">
                <label for="<?php echo $this->getMethodCode() ?>_save_card_check"><?php echo $this->__('Save card for future payments. ') ?></label>
                <input type="checkbox" name="payment[save_card_check]" id="<?php echo $this->getMethodCode() ?>_save_card_check" value='1'>     
            </li>
            
		</ul>
            
        <?php if (!empty($cardList)):?>
            <script type="application/javascript">
                hideNewCard();

                $$('.checkoutapi-saved-card').invoke('observe', 'change', hideNewCard);
                $('checkoutapiembedded-checkoutapi-new-card').observe('change', showNewCard);

                function hideNewCard() {
                    $$('.checkoutapi-li').each(Element.hide);
                    $$('.checkoutapi-save-card-check').each(Element.hide);
                    jQuery('.frames-container').hide();
                }

                function showNewCard() {
                    $$('.checkoutapi-li').each(Element.show);
                	$$('.checkoutapi-save-card-check').each(Element.show);
                    jQuery('.frames-container').show();
                }
            </script>
        <?php endif;?>
	    <?php if(!$this->isCustomerLogged() || !$this->isSaveCard()):?>
	        <script type="application/javascript">
	            $$('.checkoutapi-save-card-check').each(Element.hide);
	        </script>
	    <?php endif;?>
        <?php if($this->cvvVerification()):?>
        <script type="application/javascript">
            hideCvvVerification();

            $$('.checkoutapi-saved-card').invoke('observe', 'change', showCvvVerification);
            $('checkoutapiembedded-checkoutapi-new-card').observe('change', hideCvvVerification);

            function hideCvvVerification() {
                $$('.cvvVerification').each(Element.hide);
            }

            function showCvvVerification() {
                $$('.cvvVerification').each(Element.show);
            }
        </script>
    <?php endif;?>
<?php else :?>
    <ul class="form-list" id="payment_form_<?php echo $this->getMethodCode() ?>" style="display:none;">
        <li><?php echo $this->__('Selected Payment Type is not allowed.') ?></li>
    </ul>
<?php endif?>
